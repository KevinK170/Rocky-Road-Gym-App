<html>
<head>
	<title>Edit Rental Order</title>
    <link href="style.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div>
        <h1>Rental_Orders</h1> [ Members | <a href="Rental_Orders">Rental Orders</a> | Memberships | Rental Equipment | Employees | Orders ]
        <table border="1" cellpadding="5"> 
            <caption> Editing Rental Order: </caption>
            <!-- Access data tuple passed from app.py -->
            {% if data %}
                <thead>
                    <tr>
                        <!-- Iterate through each key in the first entry to get the column name -->
                        {% for key in data[0].keys() %}

                        <!-- Create a <th> tag with the key inside of it, this will be our header row -->
                        <th scope="col" data-field="{{ key }}" data-filter-control="input">{{ key }}</th>
                        
                        <!-- End of this for loop -->
                        {% endfor %} 
                    </tr>

                <tbody>
                    <!-- Now, iterate through every item in data -->
                    {% for item in data %}
                    <tr>
                        <!-- Then iterate through every key in the current item dictionary -->
                        {% for key in item.keys() %}
                        
                        <!-- Create a <td> element with the value of that key in it -->
                        <td>{{item[key]}}</td> {% endfor %} 
                    </tr> 
                    {% endfor %} 
            {% endif %} 
        </table>

        <div id="edit">
            <!-- form to edit data in bsg_people-->
            <form id="edit_rentalorder/" action="/edit_rentalorder/{{data[0].id}}" method="post">
                <legend><strong>Edit Rental Order</strong></legend>
                <fieldset>
                    <!-- We can preset form inputs to match attributes currently stored for 'id' of person to be updated via value= and accessing our passed data tuple -->
                    <!-- Create hidden form input to store the passed 'id' of the person we are editing so we can access it easily in our 'POST' method in our app.py -->
                    
                    <input type="hidden" value="{{data[0].rentalorder_id}}" class="form-control" id="rentalorder_id" name="personID" required>
                    <label for="make">rental order id:</label>

                    <select class="form-control" id="rentalorder_id" name="Rental Order Id" pattern="{1}" style="font-family:verdana" placeholder="" required>
                        {% for x in data %}
                            <option value={{x.order_id}}>{{x.order_id}}</option>
                        {% endfor %}
                    </select>
                    
                    <input type="text" value="{{data[0].order_id}}" class="form-control" id="order_id" name="Order ID" pattern="[A-Za-z]{1,}" required>
                    <label for="model">order id:</label>

                    <input type="text" value="{{data[0].rental_id}}" class="form-control" id="rental_id" name="Rental ID" pattern="[A-Za-z0-9]{1,}" required>
                    <label for="year">rental id:</label>
                
                
                </fieldset>
                <input type="submit" value="edit" name="Edit Rental Order" class="btn btn-primary" style="margin:.5rem;">
                <a href='/Rental_Orders'><input class="btn" type="button" value="cancel"></a>
            </form>

</html>
